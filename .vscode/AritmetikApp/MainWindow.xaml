<Window x:Class="AritmetikApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AritmetikApp"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="800"
        MinHeight="300"
        MinWidth="350"
        SizeToContent="WidthAndHeight">
    <StackPanel Margin="10" Orientation="Vertical" Background="#EEE">
        <Label Margin="5" FontSize="22" FontWeight="Bold">Aritmetiken</Label>

        <Label FontSize="16" FontWeight="Bold">Tal 1:</Label>
        <TextBox Name="txbTal1" FontSize="16" Padding="5" Margin="5"></TextBox>

        <Label FontSize="16" FontWeight="Bold">Operator (+, -, *, /):</Label>
        <TextBox Name="txbOperator" FontSize="16" Padding="5" Margin="5"></TextBox>

        <Label FontSize="16" FontWeight="Bold">Tal 2:</Label>
        <TextBox Name="txbTal2" FontSize="16" Padding="5" Margin="5"></TextBox>

        <Button FontSize="16" Padding="5" Margin="5" Click="KlickBeräkna">Beräkna</Button>

        <Label Name="lblResultat" FontSize="16" FontWeight="Bold" Margin="5" Height="50"></Label>
    </StackPanel>
</Window>
