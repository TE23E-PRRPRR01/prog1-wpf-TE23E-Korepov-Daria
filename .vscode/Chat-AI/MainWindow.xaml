<Window x:Class="Chat_AI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chat_AI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" SizeToContent="WidthAndHeight">
    <StackPanel Orientation="Vertical" Margin="5">
        <Label FontSize="20">AI Chat App</Label>
        <TextBox Name="tbxPrompt" Height="100" Margin="10" Padding="10" Width="400"></TextBox>
        <Button Click="KlickSkicka" Margin="10" Padding="10">Skicka</Button>
        <TextBox Name="tbxSvar" Height="300" Margin="10" Padding="10" IsReadOnly="true" VerticalScrollBarVisibility="Auto" Width="400" TextWrapping="Wrap"></TextBox>
    </StackPanel>
</Window>
